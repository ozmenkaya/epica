# Nginx configuration for multi-tenant Epica (using existing SSL)
# Supports subdomain-based tenancy: helmex.epica.com.tr, acme.epica.com.tr, etc.

# Redirect HTTP to HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name epica.com.tr *.epica.com.tr;
    
    # Let's Encrypt verification
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }
    
    # Redirect all HTTP to HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

# Main domain and all subdomains: epica.com.tr, *.epica.com.tr
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name epica.com.tr *.epica.com.tr;
    
    # SSL Configuration (using existing certificate for now)
    ssl_certificate /etc/letsencrypt/live/epica.com.tr/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/epica.com.tr/privkey.pem;
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;
    ssl_session_tickets off;
    
    # Modern SSL configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;
    
    # Security headers
    add_header Strict-Transport-Security "max-age=63072000" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    
    # Client upload limit
    client_max_body_size 20M;
    
    # Logging
    access_log /var/log/nginx/epica.access.log;
    error_log /var/log/nginx/epica.error.log;
    
    # Static files
    location /static/ {
        alias /opt/epica/staticfiles/;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }
    
    # Media files
    location /media/ {
        alias /opt/epica/media/;
        expires 7d;
    }
    
    # Proxy to Gunicorn
    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Buffer settings
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
    }
    
    # Health check endpoint
    location /health/ {
        proxy_pass http://127.0.0.1:8000;
        access_log off;
    }
}
